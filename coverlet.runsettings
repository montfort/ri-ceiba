<?xml version="1.0" encoding="utf-8" ?>
<RunSettings>
  <DataCollectionRunSettings>
    <DataCollectors>
      <DataCollector friendlyName="XPlat Code Coverage">
        <Configuration>
          <!-- Generate OpenCover format for SonarCloud -->
          <Format>opencover</Format>
          <!-- Exclude test assemblies and migrations from coverage -->
          <Exclude>[*]*.Migrations.*,[*]*Tests*,[*]*.Program,[*]*.Startup</Exclude>
          <ExcludeByFile>**/Migrations/**/*.cs,**/obj/**/*.cs</ExcludeByFile>
          <ExcludeByAttribute>Obsolete,GeneratedCodeAttribute,CompilerGeneratedAttribute,ExcludeFromCodeCoverageAttribute</ExcludeByAttribute>
          <!-- Include only Ceiba assemblies -->
          <Include>[Ceiba.Core]*,[Ceiba.Application]*,[Ceiba.Infrastructure]*,[Ceiba.Web]*,[Ceiba.Shared]*</Include>
          <SingleHit>false</SingleHit>
          <!-- Disable SourceLink to use local file paths instead of GitHub URLs -->
          <!-- This is required for private repositories where raw.githubusercontent.com returns 404 -->
          <UseSourceLink>false</UseSourceLink>
          <IncludeTestAssembly>false</IncludeTestAssembly>
          <SkipAutoProps>true</SkipAutoProps>
          <DeterministicReport>false</DeterministicReport>
        </Configuration>
      </DataCollector>
    </DataCollectors>
  </DataCollectionRunSettings>
</RunSettings>
