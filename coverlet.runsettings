<?xml version="1.0" encoding="utf-8" ?>
<RunSettings>
  <DataCollectionRunSettings>
    <DataCollectors>
      <DataCollector friendlyName="XPlat Code Coverage">
        <Configuration>
          <!-- Generate both formats: OpenCover for SonarQube, Cobertura for other tools -->
          <Format>opencover,cobertura</Format>
          <Exclude>[*]*.Migrations.*,[*]*Tests*,[*]*.Program,[*]*.Startup</Exclude>
          <ExcludeByFile>**/Migrations/**/*.cs</ExcludeByFile>
          <Include>[Ceiba.*]*</Include>
          <IncludeDirectory>src/</IncludeDirectory>
          <SingleHit>false</SingleHit>
          <UseSourceLink>true</UseSourceLink>
          <IncludeTestAssembly>false</IncludeTestAssembly>
          <SkipAutoProps>true</SkipAutoProps>
          <DeterministicReport>false</DeterministicReport>
        </Configuration>
      </DataCollector>
    </DataCollectors>
  </DataCollectionRunSettings>
</RunSettings>
