@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Authorization
@inject AuthenticationStateProvider AuthenticationStateProvider

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4 d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
                <span class="text-muted small d-none d-md-inline">
                    <i class="bi bi-calendar3 me-1"></i>
                    @DateTime.Now.ToString("dddd, d 'de' MMMM 'de' yyyy", new System.Globalization.CultureInfo("es-MX"))
                </span>
            </div>
            <div class="d-flex align-items-center gap-3">
                <AuthorizeView>
                    <Authorized>
                        <span class="badge bg-success">
                            <i class="bi bi-person-check me-1"></i>
                            @context.User.Identity?.Name
                        </span>
                    </Authorized>
                </AuthorizeView>
                <a href="https://github.com/SSC-CDMX/ceiba" target="_blank" class="text-decoration-none text-muted" title="Repositorio">
                    <i class="bi bi-github"></i>
                </a>
            </div>
        </div>

        <article class="content px-4">
            @Body
        </article>

        <footer class="footer px-4 py-3 mt-auto border-top">
            <div class="d-flex justify-content-between align-items-center">
                <small class="text-muted">
                    <i class="bi bi-shield-check me-1"></i>
                    Ceiba - Sistema de Reportes de Incidencias
                </small>
                <small class="text-muted">
                    SSC CDMX - Unidad Especializada en Genero v1.0.0
                </small>
            </div>
        </footer>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    <i class="bi bi-exclamation-triangle me-2"></i>
    Ha ocurrido un error inesperado.
    <a href="." class="reload">Recargar</a>
    <span class="dismiss">X</span>
</div>

<ReconnectModal />
