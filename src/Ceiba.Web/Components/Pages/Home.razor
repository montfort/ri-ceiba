@page "/"
@using Microsoft.AspNetCore.Components.Authorization
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager Navigation

<PageTitle>Inicio - Ceiba</PageTitle>

<AuthorizeView Context="mainAuthContext">
    <Authorized>
        <div class="container-fluid py-4">
            <div class="row mb-4">
                <div class="col-12">
                    <h1 class="display-4">
                        <i class="bi bi-shield-check text-primary me-3"></i>
                        Bienvenido a Ceiba
                    </h1>
                    <p class="lead text-muted">Sistema de Reportes de Incidencias</p>
                </div>
            </div>

            <div class="row g-4">
                <!-- CREADOR Dashboard -->
                <AuthorizeView Roles="CREADOR" Context="creadorContext">
                    <Authorized>
                        <div class="col-12">
                            <div class="card shadow-sm border-0">
                                <div class="card-body p-4">
                                    <h3 class="card-title mb-4">
                                        <i class="bi bi-file-earmark-text text-primary me-2"></i>
                                        Panel de Reportes
                                    </h3>
                                    <p class="card-text text-muted mb-4">
                                        Gestiona tus reportes de incidencias. Crea nuevos reportes, edita borradores y consulta tu historial.
                                    </p>
                                    <div class="d-grid gap-3 d-md-flex">
                                        <a href="/reports" class="btn btn-primary btn-lg">
                                            <i class="bi bi-list-ul me-2"></i>Ver Mis Reportes
                                        </a>
                                        <a href="/reports/new" class="btn btn-outline-primary btn-lg">
                                            <i class="bi bi-plus-circle me-2"></i>Nuevo Reporte
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </Authorized>
                </AuthorizeView>

                <!-- REVISOR Dashboard -->
                <AuthorizeView Roles="REVISOR" Context="revisorContext">
                    <Authorized>
                        <div class="col-12">
                            <div class="card shadow-sm border-0">
                                <div class="card-body p-4">
                                    <h3 class="card-title mb-4">
                                        <i class="bi bi-search text-info me-2"></i>
                                        Panel de Supervisión
                                    </h3>
                                    <p class="card-text text-muted mb-4">
                                        Revisa y gestiona todos los reportes de incidencias del sistema.
                                    </p>
                                    <div class="alert alert-info">
                                        <i class="bi bi-info-circle me-2"></i>
                                        Módulo de supervisión en desarrollo (User Story 2)
                                    </div>
                                </div>
                            </div>
                        </div>
                    </Authorized>
                </AuthorizeView>

                <!-- ADMIN Dashboard -->
                <AuthorizeView Roles="ADMIN" Context="adminContext">
                    <Authorized>
                        <div class="col-12">
                            <div class="card shadow-sm border-0">
                                <div class="card-body p-4">
                                    <h3 class="card-title mb-4">
                                        <i class="bi bi-gear text-warning me-2"></i>
                                        Panel de Administración
                                    </h3>
                                    <p class="card-text text-muted mb-4">
                                        Gestiona usuarios, roles y configuración del sistema.
                                    </p>
                                    <div class="alert alert-warning">
                                        <i class="bi bi-info-circle me-2"></i>
                                        Módulo de administración en desarrollo (User Story 3)
                                    </div>
                                </div>
                            </div>
                        </div>
                    </Authorized>
                </AuthorizeView>
            </div>

            <!-- System Info -->
            <div class="row mt-5">
                <div class="col-12">
                    <div class="card bg-light border-0">
                        <div class="card-body">
                            <h5 class="card-title text-muted">
                                <i class="bi bi-info-circle me-2"></i>Información del Sistema
                            </h5>
                            <div class="row mt-3">
                                <div class="col-md-4">
                                    <strong>Usuario:</strong> @mainAuthContext.User.Identity?.Name
                                </div>
                                <div class="col-md-4">
                                    <strong>Roles:</strong> @GetUserRoles(mainAuthContext)
                                </div>
                                <div class="col-md-4">
                                    <strong>Sesión expira:</strong> 30 minutos de inactividad
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </Authorized>
    <NotAuthorized>
        @{
            Navigation.NavigateTo("/login", forceLoad: true);
        }
    </NotAuthorized>
</AuthorizeView>

@code {
    private string GetUserRoles(AuthenticationState authState)
    {
        var roles = authState.User.Claims
            .Where(c => c.Type == System.Security.Claims.ClaimTypes.Role)
            .Select(c => c.Value)
            .ToList();

        return roles.Any() ? string.Join(", ", roles) : "Sin rol asignado";
    }
}
