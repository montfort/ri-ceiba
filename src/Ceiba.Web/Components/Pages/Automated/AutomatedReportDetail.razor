@page "/automated/reports/{Id:int}"
@using Ceiba.Core.Interfaces
@using Ceiba.Shared.DTOs
@using Microsoft.AspNetCore.Authorization
@using Markdig
@inject IAutomatedReportService ReportService
@inject NavigationManager Navigation
@inject ILogger<AutomatedReportDetail> Logger
@attribute [Authorize(Roles = "REVISOR")]

<PageTitle>Detalle de Reporte - @(Report?.FechaInicio.ToString("dd/MM/yyyy") ?? "Cargando...")</PageTitle>

<div class="container-fluid py-4">
    @if (IsLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Cargando...</span>
            </div>
            <p class="mt-3">Cargando reporte...</p>
        </div>
    }
    else if (Report == null)
    {
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle me-2"></i>
            Reporte no encontrado.
            <a href="/automated" class="alert-link">Volver a la lista</a>
        </div>
    }
    else
    {
        <!-- Header -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <a href="/automated" class="btn btn-link text-decoration-none ps-0 mb-2">
                            <i class="bi bi-arrow-left me-1"></i>Volver a la lista
                        </a>
                        <h2>
                            <i class="bi bi-file-earmark-bar-graph me-2"></i>
                            Reporte: @Report.FechaInicio.ToLocalTime().ToString("dd/MM/yyyy") - @Report.FechaFin.ToLocalTime().ToString("dd/MM/yyyy")
                        </h2>
                        <p class="text-muted mb-0">
                            Generado el @Report.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")
                            @if (!string.IsNullOrEmpty(Report.NombreModelo))
                            {
                                <span> | Plantilla: @Report.NombreModelo</span>
                            }
                        </p>
                    </div>
                    <div class="btn-group">
                        @if (!Report.Enviado)
                        {
                            <button class="btn btn-success" @onclick="SendReportAsync" disabled="@IsSending">
                                @if (IsSending)
                                {
                                    <span class="spinner-border spinner-border-sm me-1"></span>
                                }
                                <i class="bi bi-envelope me-1"></i>Enviar
                            </button>
                        }
                        @if (!string.IsNullOrEmpty(Report.ContenidoWordPath))
                        {
                            <a href="/api/automated-reports/@Id/download" class="btn btn-primary" target="_blank">
                                <i class="bi bi-file-word me-1"></i>Descargar Word
                            </a>
                        }
                        else
                        {
                            <button class="btn btn-outline-primary" @onclick="RegenerateWordAsync" disabled="@IsRegenerating">
                                @if (IsRegenerating)
                                {
                                    <span class="spinner-border spinner-border-sm me-1"></span>
                                }
                                <i class="bi bi-file-word me-1"></i>Generar Word
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Status Alert -->
        @if (!string.IsNullOrEmpty(Report.ErrorMensaje))
        {
            <div class="alert alert-danger">
                <i class="bi bi-exclamation-triangle me-2"></i>
                <strong>Error:</strong> @Report.ErrorMensaje
            </div>
        }
        else if (Report.Enviado)
        {
            <div class="alert alert-success">
                <i class="bi bi-check-circle me-2"></i>
                <strong>Enviado:</strong> @Report.FechaEnvio?.ToLocalTime().ToString("dd/MM/yyyy HH:mm")
            </div>
        }

        <div class="row">
            <!-- Statistics Panel -->
            <div class="col-lg-4 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-bar-chart me-2"></i>Estadísticas</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-6">
                                <div class="text-center p-3 bg-light rounded">
                                    <h3 class="mb-0 text-primary">@Report.Estadisticas.TotalReportes</h3>
                                    <small class="text-muted">Total Reportes</small>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="text-center p-3 bg-light rounded">
                                    <h3 class="mb-0 text-success">@Report.Estadisticas.ReportesEntregados</h3>
                                    <small class="text-muted">Entregados</small>
                                </div>
                            </div>
                        </div>

                        <hr />

                        <h6>Poblaciones Vulnerables</h6>
                        <ul class="list-unstyled">
                            <li><i class="bi bi-person me-2"></i>LGBTTTIQ+: <strong>@Report.Estadisticas.TotalLgbtttiq</strong></li>
                            <li><i class="bi bi-person me-2"></i>Migrantes: <strong>@Report.Estadisticas.TotalMigrantes</strong></li>
                            <li><i class="bi bi-person me-2"></i>Situación de calle: <strong>@Report.Estadisticas.TotalSituacionCalle</strong></li>
                            <li><i class="bi bi-person me-2"></i>Con discapacidad: <strong>@Report.Estadisticas.TotalDiscapacidad</strong></li>
                        </ul>

                        @if (!string.IsNullOrEmpty(Report.Estadisticas.DelitoMasFrecuente))
                        {
                            <hr />
                            <h6>Delito Más Frecuente</h6>
                            <p class="mb-0">
                                <span class="badge bg-danger">@Report.Estadisticas.DelitoMasFrecuente</span>
                            </p>
                        }

                        @if (!string.IsNullOrEmpty(Report.Estadisticas.ZonaMasActiva))
                        {
                            <hr />
                            <h6>Zona Más Activa</h6>
                            <p class="mb-0">
                                <span class="badge bg-warning text-dark">@Report.Estadisticas.ZonaMasActiva</span>
                            </p>
                        }

                        @if (Report.Estadisticas.PorSexo.Any())
                        {
                            <hr />
                            <h6>Por Sexo</h6>
                            @foreach (var item in Report.Estadisticas.PorSexo)
                            {
                                <div class="d-flex justify-content-between mb-1">
                                    <span>@item.Key</span>
                                    <span class="badge bg-secondary">@item.Value</span>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>

            <!-- Content Panel -->
            <div class="col-lg-8 mb-4">
                <div class="card shadow-sm">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0"><i class="bi bi-file-text me-2"></i>Contenido del Reporte</h5>
                        <div class="btn-group btn-group-sm">
                            <button class="btn @(ViewMode == "preview" ? "btn-primary" : "btn-outline-primary")"
                                    @onclick="SetViewModePreview">
                                Vista Previa
                            </button>
                            <button class="btn @(ViewMode == "markdown" ? "btn-primary" : "btn-outline-primary")"
                                    @onclick="SetViewModeMarkdown">
                                Markdown
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        @if (ViewMode == "preview")
                        {
                            <div class="markdown-content">
                                @((MarkupString)Markdown.ToHtml(Report.ContenidoMarkdown))
                            </div>
                        }
                        else
                        {
                            <pre class="bg-light p-3 rounded" style="max-height: 600px; overflow-y: auto;">@Report.ContenidoMarkdown</pre>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Breakdown Tables -->
        <div class="row">
            @if (Report.Estadisticas.PorDelito.Any())
            {
                <div class="col-md-6 mb-4">
                    <div class="card shadow-sm">
                        <div class="card-header">
                            <h6 class="mb-0"><i class="bi bi-list-ul me-2"></i>Distribución por Tipo de Delito</h6>
                        </div>
                        <div class="card-body p-0">
                            <table class="table table-sm mb-0">
                                <thead>
                                    <tr>
                                        <th>Tipo de Delito</th>
                                        <th class="text-end">Cantidad</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Report.Estadisticas.PorDelito.OrderByDescending(x => x.Value).Take(10))
                                    {
                                        <tr>
                                            <td>@item.Key</td>
                                            <td class="text-end"><span class="badge bg-primary">@item.Value</span></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }

            @if (Report.Estadisticas.PorZona.Any())
            {
                <div class="col-md-6 mb-4">
                    <div class="card shadow-sm">
                        <div class="card-header">
                            <h6 class="mb-0"><i class="bi bi-geo-alt me-2"></i>Distribución por Zona</h6>
                        </div>
                        <div class="card-body p-0">
                            <table class="table table-sm mb-0">
                                <thead>
                                    <tr>
                                        <th>Zona</th>
                                        <th class="text-end">Cantidad</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Report.Estadisticas.PorZona.OrderByDescending(x => x.Value))
                                    {
                                        <tr>
                                            <td>@item.Key</td>
                                            <td class="text-end"><span class="badge bg-success">@item.Value</span></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .markdown-content h1 { font-size: 1.75rem; border-bottom: 1px solid #dee2e6; padding-bottom: 0.5rem; }
    .markdown-content h2 { font-size: 1.5rem; margin-top: 1.5rem; }
    .markdown-content h3 { font-size: 1.25rem; margin-top: 1.25rem; }
    .markdown-content table { width: 100%; margin: 1rem 0; border-collapse: collapse; }
    .markdown-content th, .markdown-content td { border: 1px solid #dee2e6; padding: 0.5rem; }
    .markdown-content th { background-color: #f8f9fa; }
    .markdown-content hr { margin: 1.5rem 0; }
</style>

@code {
    [Parameter]
    public int Id { get; set; }

    private AutomatedReportDetailDto? Report { get; set; }
    private bool IsLoading { get; set; } = true;
    private bool IsSending { get; set; }
    private bool IsRegenerating { get; set; }
    private string ViewMode { get; set; } = "preview";

    private void SetViewModePreview() => ViewMode = "preview";
    private void SetViewModeMarkdown() => ViewMode = "markdown";

    protected override async Task OnInitializedAsync()
    {
        await LoadReportAsync();
    }

    private async Task LoadReportAsync()
    {
        IsLoading = true;
        try
        {
            Report = await ReportService.GetReportByIdAsync(Id);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading report {Id}", Id);
        }
        finally
        {
            IsLoading = false;
        }
    }

    private async Task SendReportAsync()
    {
        IsSending = true;
        try
        {
            await ReportService.SendReportByEmailAsync(Id);
            await LoadReportAsync();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error sending report {Id}", Id);
        }
        finally
        {
            IsSending = false;
        }
    }

    private async Task RegenerateWordAsync()
    {
        IsRegenerating = true;
        try
        {
            await ReportService.RegenerateWordDocumentAsync(Id);
            await LoadReportAsync();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error regenerating Word document for report {Id}", Id);
        }
        finally
        {
            IsRegenerating = false;
        }
    }
}
