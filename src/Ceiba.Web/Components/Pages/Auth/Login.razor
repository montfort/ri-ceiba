@page "/login"
@using System.ComponentModel.DataAnnotations
@using Microsoft.AspNetCore.Antiforgery
@inject NavigationManager Navigation
@inject IAntiforgery Antiforgery
@inject IHttpContextAccessor HttpContextAccessor

<PageTitle>Iniciar Sesión - Ceiba</PageTitle>

<div class="container" role="main">
    <div class="row justify-content-center min-vh-100 align-items-center">
        <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-4">
            <div class="card shadow-lg" role="region" aria-labelledby="login-heading">
                <div class="card-body p-4 p-sm-5">
                    <div class="text-center mb-4">
                        <h1 id="login-heading" class="h3 mb-3 fw-bold text-primary">Ceiba</h1>
                        <p class="text-muted">Sistema de Reportes de Incidencias</p>
                    </div>

                    <form method="post" action="/account/login-form" aria-describedby="login-instructions">
                        <p id="login-instructions" class="visually-hidden">
                            Ingrese su correo electrónico y contraseña para acceder al sistema.
                        </p>
                        @{
                            var httpContext = HttpContextAccessor.HttpContext;
                            var antiforgeryToken = httpContext != null ? Antiforgery.GetAndStoreTokens(httpContext) : null;
                        }
                        @if (antiforgeryToken != null)
                        {
                            <input type="hidden" name="__RequestVerificationToken" value="@antiforgeryToken.RequestToken" />
                        }
                        <input type="hidden" name="returnUrl" value="@ReturnUrl" />

                        <div class="mb-3">
                            <label for="email" class="form-label">Correo Electrónico</label>
                            <div class="input-group">
                                <span class="input-group-text" aria-hidden="true"><i class="bi bi-envelope"></i></span>
                                <input type="email"
                                       id="email"
                                       name="email"
                                       class="form-control"
                                       placeholder="usuario@@ejemplo.com"
                                       autocomplete="username"
                                       required
                                       aria-required="true"
                                       aria-describedby="email-help" />
                            </div>
                            <small id="email-help" class="visually-hidden">Ingrese su correo electrónico institucional</small>
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">Contraseña</label>
                            <div class="input-group">
                                <span class="input-group-text" aria-hidden="true"><i class="bi bi-lock"></i></span>
                                <input type="password"
                                       id="password"
                                       name="password"
                                       class="form-control"
                                       placeholder="••••••••••"
                                       autocomplete="current-password"
                                       required
                                       minlength="10"
                                       aria-required="true"
                                       aria-describedby="password-help" />
                            </div>
                            <small id="password-help" class="visually-hidden">La contraseña debe tener al menos 10 caracteres</small>
                        </div>

                        <div class="mb-3 form-check">
                            <input type="checkbox"
                                   id="rememberMe"
                                   name="rememberMe"
                                   class="form-check-input"
                                   value="true"
                                   aria-describedby="remember-help" />
                            <label class="form-check-label" for="rememberMe">
                                Recordar sesión
                            </label>
                            <small id="remember-help" class="visually-hidden">Mantener la sesión activa en este dispositivo</small>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-box-arrow-in-right me-2" aria-hidden="true"></i>Iniciar Sesión
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [SupplyParameterFromQuery]
    private string? ReturnUrl { get; set; }
}
