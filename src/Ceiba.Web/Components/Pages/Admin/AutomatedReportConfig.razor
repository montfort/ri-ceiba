@page "/admin/automated-report-config"
@using Ceiba.Shared.DTOs
@using Ceiba.Core.Interfaces
@using Microsoft.AspNetCore.Authorization
@inject IAutomatedReportConfigService ConfigService
@inject ILogger<AutomatedReportConfig> Logger
@inject IJSRuntime JSRuntime
@attribute [Authorize(Roles = "ADMIN")]

<PageTitle>Configuración de Reportes Automatizados</PageTitle>

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2><i class="bi bi-gear me-2"></i>Configuración de Reportes Automatizados</h2>
            <p class="text-muted">Configure la generación automática de reportes diarios</p>
        </div>
    </div>

    @if (IsLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Cargando...</span>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-lg-8">
                <div class="card shadow-sm">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-sliders me-2"></i>Parámetros de Generación</h5>
                    </div>
                    <div class="card-body">
                        @if (!string.IsNullOrEmpty(ErrorMessage))
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <i class="bi bi-exclamation-triangle me-2"></i>
                                @ErrorMessage
                                <button type="button" class="btn-close" @onclick="@(() => ErrorMessage = null)"></button>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(SuccessMessage))
                        {
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <i class="bi bi-check-circle me-2"></i>
                                @SuccessMessage
                                <button type="button" class="btn-close" @onclick="@(() => SuccessMessage = null)"></button>
                            </div>
                        }

                        <EditForm Model="@Model" OnValidSubmit="@HandleSubmit">
                            <DataAnnotationsValidator />

                            <!-- Habilitar/Deshabilitar -->
                            <div class="mb-4">
                                <div class="form-check form-switch">
                                    <InputCheckbox class="form-check-input" id="habilitado" @bind-Value="Model.Habilitado" />
                                    <label class="form-check-label" for="habilitado">
                                        <strong>Habilitar generación automática</strong>
                                    </label>
                                </div>
                                <small class="text-muted">
                                    Cuando está habilitado, el sistema generará reportes automáticamente cada día a la hora configurada.
                                </small>
                            </div>

                            <!-- Hora de Generación -->
                            <div class="mb-4">
                                <label for="horaGeneracion" class="form-label">
                                    <i class="bi bi-clock me-1"></i>Hora de Generación (hora local)
                                </label>
                                <input type="time"
                                       class="form-control"
                                       id="horaGeneracion"
                                       value="@HoraGeneracionLocalString"
                                       @onchange="@((ChangeEventArgs e) => HoraGeneracionLocalString = e.Value?.ToString() ?? "")"
                                       disabled="@(!Model.Habilitado)" />
                                <small class="text-muted">
                                    Hora local en que se generarán los reportes automáticamente (formato 24 horas).
                                    @if (!string.IsNullOrEmpty(_timezoneName))
                                    {
                                        <br /><span class="text-info">Zona horaria detectada: @_timezoneName</span>
                                    }
                                </small>
                            </div>

                            <!-- Destinatarios -->
                            <div class="mb-4">
                                <label for="destinatarios" class="form-label">
                                    <i class="bi bi-envelope me-1"></i>Destinatarios de Email
                                </label>
                                <textarea class="form-control"
                                          id="destinatarios"
                                          rows="4"
                                          @bind="DestinatariosString"
                                          placeholder="supervisor@example.com&#10;director@example.com&#10;admin@example.com"
                                          disabled="@(!Model.Habilitado)"></textarea>
                                <small class="text-muted">
                                    Ingrese un email por línea. Estos destinatarios recibirán los reportes generados automáticamente.
                                </small>
                            </div>

                            <!-- Ruta de Salida -->
                            <div class="mb-4">
                                <label for="rutaSalida" class="form-label">
                                    <i class="bi bi-folder me-1"></i>Ruta de Salida
                                </label>
                                <InputText class="form-control"
                                           id="rutaSalida"
                                           @bind-Value="Model.RutaSalida"
                                           disabled="@(!Model.Habilitado)" />
                                <small class="text-muted">
                                    Directorio donde se guardarán los archivos Word generados.
                                </small>
                            </div>

                            <!-- Botones -->
                            <div class="d-flex justify-content-between">
                                <button type="button" class="btn btn-outline-secondary" @onclick="LoadConfiguration" disabled="@IsSaving">
                                    <i class="bi bi-arrow-clockwise me-1"></i>Recargar
                                </button>
                                <button type="submit" class="btn btn-primary" disabled="@IsSaving">
                                    @if (IsSaving)
                                    {
                                        <span class="spinner-border spinner-border-sm me-1"></span>
                                    }
                                    else
                                    {
                                        <i class="bi bi-save me-1"></i>
                                    }
                                    Guardar Configuración
                                </button>
                            </div>
                        </EditForm>
                    </div>
                </div>
            </div>

            <!-- Info Panel -->
            <div class="col-lg-4">
                <div class="card shadow-sm">
                    <div class="card-header">
                        <h6 class="mb-0"><i class="bi bi-info-circle me-2"></i>Información</h6>
                    </div>
                    <div class="card-body">
                        <h6>Estado Actual</h6>
                        <p class="mb-2">
                            <strong>Generación Automática:</strong>
                            @if (Config?.Habilitado == true)
                            {
                                <span class="badge bg-success">Habilitada</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Deshabilitada</span>
                            }
                        </p>
                        @if (Config != null)
                        {
                            <p class="mb-2">
                                <strong>Hora de Generación:</strong> @GetLocalTimeDisplay() (hora local)
                            </p>
                            <p class="mb-2 text-muted small">
                                (UTC: @Config.HoraGeneracion.ToString(@"hh\:mm"))
                            </p>
                            <p class="mb-2">
                                <strong>Destinatarios:</strong> @Config.Destinatarios.Length
                            </p>
                            @if (Config.UpdatedAt.HasValue)
                            {
                                <p class="mb-0 text-muted small">
                                    Última modificación: @Config.UpdatedAt.Value.ToLocalTime().ToString("dd/MM/yyyy HH:mm")
                                </p>
                            }
                        }

                        <hr />

                        <h6>Notas Importantes</h6>
                        <ul class="small">
                            <li>Los cambios se aplican inmediatamente</li>
                            <li>La hora se ingresa en hora local y se convierte automáticamente</li>
                            <li>Se requiere al menos un destinatario para habilitar la generación automática</li>
                            <li>Los reportes también pueden generarse manualmente desde la sección de REVISOR</li>
                        </ul>

                        <!-- Debug Panel -->
                        <hr />
                        <details>
                            <summary class="text-muted small"><i class="bi bi-bug me-1"></i>Información de Depuración</summary>
                            <div class="mt-2 small font-monospace bg-light p-2 rounded">
                                <div><strong>Zona horaria cargada:</strong> @(_timezoneLoaded ? "Sí" : "No")</div>
                                <div><strong>Nombre TZ (navegador):</strong> @(_timezoneName ?? "N/A")</div>
                                <div><strong>Offset (minutos):</strong> @_timezoneOffsetMinutes</div>
                                <div><strong>Offset (horas):</strong> @(TimeSpan.FromMinutes(_timezoneOffsetMinutes).ToString(@"hh\:mm"))</div>
                                <div><strong>TZ servidor:</strong> @TimeZoneInfo.Local.Id</div>
                                <div><strong>UTC servidor:</strong> @DateTime.UtcNow.ToString("HH:mm:ss")</div>
                                <div><strong>Local servidor:</strong> @DateTime.Now.ToString("HH:mm:ss")</div>
                                <hr class="my-1" />
                                <div><strong>Model.HoraGeneracion:</strong> @Model.HoraGeneracion.ToString(@"hh\:mm\:ss")</div>
                                @if (Config != null)
                                {
                                    <div><strong>Config.HoraGeneracion:</strong> @Config.HoraGeneracion.ToString(@"hh\:mm\:ss")</div>
                                }
                                @if (!string.IsNullOrEmpty(_lastConversionDebug))
                                {
                                    <hr class="my-1" />
                                    <div class="text-warning"><strong>Última conversión:</strong> @_lastConversionDebug</div>
                                }
                            </div>
                        </details>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private AutomatedReportConfigDto? Config { get; set; }
    private AutomatedReportConfigUpdateDto Model { get; set; } = new();
    private bool IsLoading { get; set; } = true;
    private bool IsSaving { get; set; }
    private string? ErrorMessage { get; set; }
    private string? SuccessMessage { get; set; }

    // Timezone handling
    private int _timezoneOffsetMinutes;
    private string? _timezoneName;
    private bool _timezoneLoaded;

    // Debug info for last conversion
    private string _lastConversionDebug = "";

    // Local time displayed/edited in UI - converts to/from UTC in Model.HoraGeneracion
    private string HoraGeneracionLocalString
    {
        get
        {
            if (!_timezoneLoaded)
            {
                return Model.HoraGeneracion.ToString(@"hh\:mm");
            }
            // Convert UTC to local: subtract offset (since getTimezoneOffset returns negative for UTC+)
            var localTime = Model.HoraGeneracion.Add(TimeSpan.FromMinutes(-_timezoneOffsetMinutes));
            // Handle day wraparound
            if (localTime < TimeSpan.Zero)
            {
                localTime = localTime.Add(TimeSpan.FromDays(1));
            }
            else if (localTime >= TimeSpan.FromDays(1))
            {
                localTime = localTime.Subtract(TimeSpan.FromDays(1));
            }
            return localTime.ToString(@"hh\:mm");
        }
        set
        {
            if (TimeSpan.TryParse(value, System.Globalization.CultureInfo.InvariantCulture, out var localTime))
            {
                if (!_timezoneLoaded)
                {
                    _lastConversionDebug = $"TZ no cargada: {localTime:hh\\:mm} → {localTime:hh\\:mm} (sin conversión)";
                    Logger.LogWarning("Timezone not loaded when setting time, no conversion applied");
                    Model.HoraGeneracion = localTime;
                    return;
                }
                // Convert local to UTC: add offset (since getTimezoneOffset returns negative for UTC+)
                var utcTime = localTime.Add(TimeSpan.FromMinutes(_timezoneOffsetMinutes));
                // Handle day wraparound
                if (utcTime < TimeSpan.Zero)
                {
                    utcTime = utcTime.Add(TimeSpan.FromDays(1));
                }
                else if (utcTime >= TimeSpan.FromDays(1))
                {
                    utcTime = utcTime.Subtract(TimeSpan.FromDays(1));
                }
                _lastConversionDebug = $"Local {localTime:hh\\:mm} + offset {_timezoneOffsetMinutes}min = UTC {utcTime:hh\\:mm}";
                Logger.LogInformation("Time conversion: Local {LocalTime} + {Offset} min = UTC {UtcTime}",
                    localTime, _timezoneOffsetMinutes, utcTime);
                Model.HoraGeneracion = utcTime;
            }
        }
    }

    private string DestinatariosString
    {
        get => string.Join(Environment.NewLine, Model.Destinatarios);
        set
        {
            Model.Destinatarios = value
                .Split(new[] { '\r', '\n' }, StringSplitOptions.RemoveEmptyEntries)
                .Select(d => d.Trim())
                .Where(d => !string.IsNullOrWhiteSpace(d))
                .ToArray();
        }
    }

    protected override async Task OnInitializedAsync()
    {
        await LoadConfiguration();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try
            {
                _timezoneOffsetMinutes = await JSRuntime.InvokeAsync<int>("getTimezoneOffsetMinutes");
                _timezoneName = await JSRuntime.InvokeAsync<string>("getTimezoneName");
                _timezoneLoaded = true;
                Logger.LogInformation("Timezone loaded: {TimezoneName}, Offset: {Offset} minutes",
                    _timezoneName, _timezoneOffsetMinutes);
                StateHasChanged();
            }
            catch (Exception ex)
            {
                Logger.LogWarning(ex, "Could not load timezone information, using UTC");
                _timezoneLoaded = true;
                _timezoneOffsetMinutes = 0;
            }
        }
    }

    private string GetLocalTimeDisplay()
    {
        if (Config == null) return "--:--";

        if (!_timezoneLoaded)
        {
            return Config.HoraGeneracion.ToString(@"hh\:mm");
        }

        var localTime = Config.HoraGeneracion.Add(TimeSpan.FromMinutes(-_timezoneOffsetMinutes));
        if (localTime < TimeSpan.Zero)
        {
            localTime = localTime.Add(TimeSpan.FromDays(1));
        }
        else if (localTime >= TimeSpan.FromDays(1))
        {
            localTime = localTime.Subtract(TimeSpan.FromDays(1));
        }
        return localTime.ToString(@"hh\:mm");
    }

    private async Task LoadConfiguration()
    {
        IsLoading = true;
        ErrorMessage = null;

        try
        {
            Logger.LogInformation("Loading automated report configuration");
            Config = await ConfigService.GetConfigurationAsync();

            if (Config == null)
            {
                // Create default configuration if none exists
                Config = await ConfigService.EnsureConfigurationExistsAsync();
            }

            if (Config != null)
            {
                Model = new AutomatedReportConfigUpdateDto
                {
                    Habilitado = Config.Habilitado,
                    HoraGeneracion = Config.HoraGeneracion,
                    Destinatarios = Config.Destinatarios,
                    RutaSalida = Config.RutaSalida
                };
                Logger.LogInformation("Configuration loaded successfully");
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading automated report configuration");
            ErrorMessage = $"Error al cargar la configuración: {ex.Message}";
        }
        finally
        {
            IsLoading = false;
        }
    }

    private async Task HandleSubmit()
    {
        IsSaving = true;
        ErrorMessage = null;
        SuccessMessage = null;

        try
        {
            Logger.LogInformation("Submitting configuration update");

            // Validate input
            if (Model.HoraGeneracion < TimeSpan.Zero || Model.HoraGeneracion >= TimeSpan.FromDays(1))
            {
                ErrorMessage = "La hora de generación debe estar entre 00:00:00 y 23:59:59";
                return;
            }

            if (Model.Habilitado && Model.Destinatarios.Length == 0)
            {
                ErrorMessage = "Debe especificar al menos un destinatario cuando la generación automática está habilitada";
                return;
            }

            Config = await ConfigService.UpdateConfigurationAsync(Model);
            SuccessMessage = "Configuración guardada exitosamente";
            Logger.LogInformation("Configuration saved successfully");
        }
        catch (UnauthorizedAccessException ex)
        {
            Logger.LogError(ex, "Unauthorized access when updating configuration");
            ErrorMessage = "No autorizado. Debe estar autenticado como ADMIN.";
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error saving automated report configuration");
            ErrorMessage = $"Error al guardar la configuración: {ex.Message}";
        }
        finally
        {
            IsSaving = false;
        }
    }
}
