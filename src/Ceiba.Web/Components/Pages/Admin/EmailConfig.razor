@page "/admin/email-config"
@using Ceiba.Shared.DTOs
@using Ceiba.Core.Interfaces
@using Microsoft.AspNetCore.Authorization
@inject IEmailConfigService ConfigService
@inject ILogger<EmailConfig> Logger
@attribute [Authorize(Roles = "ADMIN")]

<PageTitle>Configuración de Email</PageTitle>

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2><i class="bi bi-envelope-at me-2"></i>Configuración de Email</h2>
            <p class="text-muted">Configure el servicio de email transaccional para envío de reportes automatizados</p>
        </div>
    </div>

    @if (IsLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Cargando...</span>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-lg-8">
                <div class="card shadow-sm">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-sliders me-2"></i>Configuración del Servicio</h5>
                    </div>
                    <div class="card-body">
                        @if (!string.IsNullOrEmpty(ErrorMessage))
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <i class="bi bi-exclamation-triangle me-2"></i>
                                @ErrorMessage
                                <button type="button" class="btn-close" @onclick="@(() => ErrorMessage = null)"></button>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(SuccessMessage))
                        {
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <i class="bi bi-check-circle me-2"></i>
                                @SuccessMessage
                                <button type="button" class="btn-close" @onclick="@(() => SuccessMessage = null)"></button>
                            </div>
                        }

                        <EditForm Model="@Model" OnValidSubmit="@HandleSubmit">
                            <DataAnnotationsValidator />

                            <!-- Habilitar/Deshabilitar -->
                            <div class="mb-4">
                                <div class="form-check form-switch">
                                    <InputCheckbox class="form-check-input" id="habilitado" @bind-Value="Model.Habilitado" />
                                    <label class="form-check-label" for="habilitado">
                                        <strong>Habilitar servicio de email</strong>
                                    </label>
                                </div>
                                <small class="text-muted">
                                    Cuando está habilitado, el sistema podrá enviar emails automáticamente.
                                </small>
                            </div>

                            <!-- Proveedor -->
                            <div class="mb-4">
                                <label for="proveedor" class="form-label">
                                    <i class="bi bi-server me-1"></i>Proveedor de Email
                                </label>
                                <select class="form-select" id="proveedor" @bind="Model.Proveedor" disabled="@(!Model.Habilitado)">
                                    <option value="SMTP">SMTP (Servidor de correo tradicional)</option>
                                    <option value="SendGrid">SendGrid (Email transaccional)</option>
                                    <option value="Mailgun">Mailgun (Email transaccional)</option>
                                </select>
                                <small class="text-muted">
                                    Seleccione el tipo de servicio que desea utilizar para enviar emails.
                                </small>
                            </div>

                            <!-- Configuración común -->
                            <div class="mb-4">
                                <label for="fromEmail" class="form-label">
                                    <i class="bi bi-envelope me-1"></i>Email del remitente
                                </label>
                                <InputText class="form-control" id="fromEmail" @bind-Value="Model.FromEmail" disabled="@(!Model.Habilitado)" />
                                <small class="text-muted">Email que aparecerá como remitente de los mensajes.</small>
                            </div>

                            <div class="mb-4">
                                <label for="fromName" class="form-label">
                                    <i class="bi bi-person me-1"></i>Nombre del remitente
                                </label>
                                <InputText class="form-control" id="fromName" @bind-Value="Model.FromName" disabled="@(!Model.Habilitado)" />
                                <small class="text-muted">Nombre que aparecerá como remitente de los mensajes.</small>
                            </div>

                            <!-- Configuración SMTP -->
                            @if (Model.Proveedor == "SMTP")
                            {
                                <hr class="my-4" />
                                <h6 class="mb-3">Configuración SMTP</h6>

                                <div class="mb-3">
                                    <label for="smtpHost" class="form-label">Host SMTP</label>
                                    <InputText class="form-control" id="smtpHost" @bind-Value="Model.SmtpHost" disabled="@(!Model.Habilitado)" />
                                </div>

                                <div class="mb-3">
                                    <label for="smtpPort" class="form-label">Puerto SMTP</label>
                                    <InputNumber class="form-control" id="smtpPort" @bind-Value="Model.SmtpPort" disabled="@(!Model.Habilitado)" />
                                    <small class="text-muted">Puertos comunes: 587 (STARTTLS), 465 (SSL), 25 (sin cifrado)</small>
                                </div>

                                <div class="mb-3">
                                    <label for="smtpUsername" class="form-label">Usuario SMTP (opcional)</label>
                                    <InputText class="form-control" id="smtpUsername" @bind-Value="Model.SmtpUsername" disabled="@(!Model.Habilitado)" />
                                </div>

                                <div class="mb-3">
                                    <label for="smtpPassword" class="form-label">Contraseña SMTP (opcional)</label>
                                    <input type="password" class="form-control" id="smtpPassword" @bind="Model.SmtpPassword" disabled="@(!Model.Habilitado)" />
                                    <small class="text-muted">Dejar en blanco para mantener la contraseña actual.</small>
                                </div>

                                <div class="mb-3">
                                    <div class="form-check form-switch">
                                        <InputCheckbox class="form-check-input" id="smtpUseSsl" @bind-Value="Model.SmtpUseSsl" disabled="@(!Model.Habilitado)" />
                                        <label class="form-check-label" for="smtpUseSsl">Usar SSL/TLS</label>
                                    </div>
                                </div>
                            }

                            <!-- Configuración SendGrid -->
                            @if (Model.Proveedor == "SendGrid")
                            {
                                <hr class="my-4" />
                                <h6 class="mb-3">Configuración SendGrid</h6>

                                <div class="mb-3">
                                    <label for="sendGridApiKey" class="form-label">API Key de SendGrid</label>
                                    <input type="password" class="form-control" id="sendGridApiKey" @bind="Model.SendGridApiKey" disabled="@(!Model.Habilitado)" />
                                    <small class="text-muted">
                                        @if (Config?.HasSendGridApiKey == true)
                                        {
                                            <span class="text-success">
                                                <i class="bi bi-check-circle me-1"></i>API Key configurada. Dejar en blanco para mantenerla.
                                            </span>
                                        }
                                        else
                                        {
                                            <span>Obtenga su API Key desde el portal de SendGrid.</span>
                                        }
                                    </small>
                                </div>

                                <div class="alert alert-info">
                                    <i class="bi bi-info-circle me-2"></i>
                                    <strong>SendGrid</strong> es un servicio de email transaccional que ofrece alta entregabilidad y escalabilidad.
                                    Necesitará crear una cuenta en <a href="https://sendgrid.com" target="_blank">sendgrid.com</a> para obtener una API Key.
                                </div>
                            }

                            <!-- Configuración Mailgun -->
                            @if (Model.Proveedor == "Mailgun")
                            {
                                <hr class="my-4" />
                                <h6 class="mb-3">Configuración Mailgun</h6>

                                <div class="mb-3">
                                    <label for="mailgunApiKey" class="form-label">API Key de Mailgun</label>
                                    <input type="password" class="form-control" id="mailgunApiKey" @bind="Model.MailgunApiKey" disabled="@(!Model.Habilitado)" />
                                    <small class="text-muted">
                                        @if (Config?.HasMailgunApiKey == true)
                                        {
                                            <span class="text-success">
                                                <i class="bi bi-check-circle me-1"></i>API Key configurada. Dejar en blanco para mantenerla.
                                            </span>
                                        }
                                        else
                                        {
                                            <span>Obtenga su API Key desde el portal de Mailgun.</span>
                                        }
                                    </small>
                                </div>

                                <div class="mb-3">
                                    <label for="mailgunDomain" class="form-label">Dominio de Mailgun</label>
                                    <InputText class="form-control" id="mailgunDomain" @bind-Value="Model.MailgunDomain" disabled="@(!Model.Habilitado)" placeholder="mg.example.com" />
                                    <small class="text-muted">El dominio configurado en su cuenta de Mailgun para envío de emails.</small>
                                </div>

                                <div class="mb-3">
                                    <label for="mailgunRegion" class="form-label">Región del servidor</label>
                                    <select class="form-select" id="mailgunRegion" @bind="Model.MailgunRegion" disabled="@(!Model.Habilitado)">
                                        <option value="US">Estados Unidos</option>
                                        <option value="EU">Europa</option>
                                    </select>
                                    <small class="text-muted">Seleccione la región donde está alojado su dominio de Mailgun.</small>
                                </div>

                                <div class="alert alert-info">
                                    <i class="bi bi-info-circle me-2"></i>
                                    <strong>Mailgun</strong> es un servicio de email transaccional potente y confiable con excelente entregabilidad.
                                    Necesitará crear una cuenta en <a href="https://www.mailgun.com" target="_blank">mailgun.com</a> y verificar un dominio para obtener una API Key.
                                </div>
                            }

                            <!-- Botones -->
                            <div class="d-flex justify-content-between mt-4">
                                <button type="button" class="btn btn-outline-secondary" @onclick="LoadConfiguration" disabled="@IsSaving">
                                    <i class="bi bi-arrow-clockwise me-1"></i>Recargar
                                </button>
                                <div>
                                    <button type="button" class="btn btn-outline-primary me-2" @onclick="ShowTestDialog" disabled="@(!Model.Habilitado || IsSaving)">
                                        <i class="bi bi-send-check me-1"></i>Probar Configuración
                                    </button>
                                    <button type="submit" class="btn btn-primary" disabled="@IsSaving">
                                        @if (IsSaving)
                                        {
                                            <span class="spinner-border spinner-border-sm me-1"></span>
                                        }
                                        else
                                        {
                                            <i class="bi bi-save me-1"></i>
                                        }
                                        Guardar Configuración
                                    </button>
                                </div>
                            </div>
                        </EditForm>
                    </div>
                </div>
            </div>

            <!-- Info Panel -->
            <div class="col-lg-4">
                <div class="card shadow-sm mb-4">
                    <div class="card-header">
                        <h6 class="mb-0"><i class="bi bi-info-circle me-2"></i>Estado Actual</h6>
                    </div>
                    <div class="card-body">
                        <p class="mb-2">
                            <strong>Servicio de Email:</strong>
                            @if (Config?.Habilitado == true)
                            {
                                <span class="badge bg-success">Habilitado</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Deshabilitado</span>
                            }
                        </p>
                        @if (Config != null)
                        {
                            <p class="mb-2">
                                <strong>Proveedor:</strong> @Config.Proveedor
                            </p>
                            <p class="mb-2">
                                <strong>Remitente:</strong><br/>
                                <small>@Config.FromName &lt;@Config.FromEmail&gt;</small>
                            </p>
                            @if (Config.LastTestedAt.HasValue)
                            {
                                <hr />
                                <p class="mb-2">
                                    <strong>Última prueba:</strong><br/>
                                    <small>@Config.LastTestedAt.Value.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</small>
                                </p>
                                <p class="mb-0">
                                    @if (Config.LastTestSuccess == true)
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle me-1"></i>Exitosa
                                        </span>
                                    }
                                    else if (Config.LastTestSuccess == false)
                                    {
                                        <span class="badge bg-danger">
                                            <i class="bi bi-x-circle me-1"></i>Fallida
                                        </span>
                                        @if (!string.IsNullOrEmpty(Config.LastTestError))
                                        {
                                            <br/>
                                            <small class="text-danger">@Config.LastTestError</small>
                                        }
                                    }
                                </p>
                            }
                        }
                    </div>
                </div>

                <div class="card shadow-sm">
                    <div class="card-header">
                        <h6 class="mb-0"><i class="bi bi-lightbulb me-2"></i>Ayuda</h6>
                    </div>
                    <div class="card-body">
                        <h6>Proveedores Soportados</h6>
                        <ul class="small">
                            <li><strong>SMTP</strong>: Servidor de correo tradicional. Requiere host, puerto y credenciales.</li>
                            <li><strong>SendGrid</strong>: Servicio de email transaccional con alta entregabilidad.</li>
                            <li><strong>Mailgun</strong>: Servicio de email transaccional potente y confiable.</li>
                        </ul>

                        <h6 class="mt-3">Recomendaciones</h6>
                        <ul class="small">
                            <li>Pruebe la configuración antes de habilitar el servicio</li>
                            <li>Use SendGrid o Mailgun para producción por su mejor entregabilidad</li>
                            <li>Mailgun es más flexible y no suspende cuentas inmediatamente</li>
                            <li>Mantenga las credenciales seguras</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- Test Dialog -->
@if (ShowTestEmailDialog)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Probar Configuración de Email</h5>
                    <button type="button" class="btn-close" @onclick="CloseTestDialog"></button>
                </div>
                <div class="modal-body">
                    <p>Ingrese un email para recibir un mensaje de prueba:</p>
                    <div class="mb-3">
                        <label for="testEmail" class="form-label">Email de prueba</label>
                        <input type="email" class="form-control" id="testEmail" @bind="TestRecipient" />
                    </div>
                    @if (!string.IsNullOrEmpty(TestResultMessage))
                    {
                        <div class="alert @(TestResultSuccess ? "alert-success" : "alert-danger")">
                            @TestResultMessage
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseTestDialog" disabled="@IsTesting">Cancelar</button>
                    <button type="button" class="btn btn-primary" @onclick="SendTestEmail" disabled="@IsTesting">
                        @if (IsTesting)
                        {
                            <span class="spinner-border spinner-border-sm me-1"></span>
                        }
                        Enviar Prueba
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private EmailConfigDto? Config { get; set; }
    private EmailConfigUpdateDto Model { get; set; } = new();
    private bool IsLoading { get; set; } = true;
    private bool IsSaving { get; set; }
    private bool IsTesting { get; set; }
    private string? ErrorMessage { get; set; }
    private string? SuccessMessage { get; set; }

    // Test dialog
    private bool ShowTestEmailDialog { get; set; }
    private string TestRecipient { get; set; } = string.Empty;
    private string? TestResultMessage { get; set; }
    private bool TestResultSuccess { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await LoadConfiguration();
    }

    private async Task LoadConfiguration()
    {
        IsLoading = true;
        ErrorMessage = null;

        try
        {
            Logger.LogInformation("Loading email configuration");
            Config = await ConfigService.GetConfigurationAsync();

            if (Config == null)
            {
                Config = await ConfigService.EnsureConfigurationExistsAsync();
            }

            if (Config != null)
            {
                Model = new EmailConfigUpdateDto
                {
                    Proveedor = Config.Proveedor,
                    Habilitado = Config.Habilitado,
                    SmtpHost = Config.SmtpHost,
                    SmtpPort = Config.SmtpPort,
                    SmtpUsername = Config.SmtpUsername,
                    SmtpUseSsl = Config.SmtpUseSsl,
                    MailgunDomain = Config.MailgunDomain,
                    MailgunRegion = Config.MailgunRegion,
                    FromEmail = Config.FromEmail,
                    FromName = Config.FromName
                };
                Logger.LogInformation("Configuration loaded successfully");
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading email configuration");
            ErrorMessage = $"Error al cargar la configuración: {ex.Message}";
        }
        finally
        {
            IsLoading = false;
        }
    }

    private async Task HandleSubmit()
    {
        IsSaving = true;
        ErrorMessage = null;
        SuccessMessage = null;

        try
        {
            Logger.LogInformation("Submitting email configuration update");

            // Validate configuration
            var validationError = ValidateEmailConfiguration();
            if (validationError != null)
            {
                ErrorMessage = validationError;
                return;
            }

            Config = await ConfigService.UpdateConfigurationAsync(Model);
            SuccessMessage = "Configuración guardada exitosamente";
            Logger.LogInformation("Email configuration saved successfully");
        }
        catch (UnauthorizedAccessException ex)
        {
            Logger.LogError(ex, "Unauthorized access when updating email configuration");
            ErrorMessage = "No autorizado. Debe estar autenticado como ADMIN.";
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error saving email configuration");
            ErrorMessage = $"Error al guardar la configuración: {ex.Message}";
        }
        finally
        {
            IsSaving = false;
        }
    }

    private string? ValidateEmailConfiguration()
    {
        if (!Model.Habilitado)
        {
            return null;
        }

        if (string.IsNullOrWhiteSpace(Model.FromEmail) || string.IsNullOrWhiteSpace(Model.FromName))
        {
            return "El email y nombre del remitente son obligatorios";
        }

        return Model.Proveedor switch
        {
            "SMTP" => ValidateSmtpConfiguration(),
            "SendGrid" => ValidateSendGridConfiguration(),
            "Mailgun" => ValidateMailgunConfiguration(),
            _ => null
        };
    }

    private string? ValidateSmtpConfiguration()
    {
        if (string.IsNullOrWhiteSpace(Model.SmtpHost) || !Model.SmtpPort.HasValue)
        {
            return "El host y puerto SMTP son obligatorios";
        }
        return null;
    }

    private string? ValidateSendGridConfiguration()
    {
        if (Config?.HasSendGridApiKey != true && string.IsNullOrWhiteSpace(Model.SendGridApiKey))
        {
            return "La API Key de SendGrid es obligatoria";
        }
        return null;
    }

    private string? ValidateMailgunConfiguration()
    {
        if (Config?.HasMailgunApiKey != true && string.IsNullOrWhiteSpace(Model.MailgunApiKey))
        {
            return "La API Key de Mailgun es obligatoria";
        }
        if (string.IsNullOrWhiteSpace(Model.MailgunDomain))
        {
            return "El dominio de Mailgun es obligatorio";
        }
        return null;
    }

    private void ShowTestDialog()
    {
        TestRecipient = string.Empty;
        TestResultMessage = null;
        ShowTestEmailDialog = true;
    }

    private void CloseTestDialog()
    {
        ShowTestEmailDialog = false;
        TestResultMessage = null;
    }

    private async Task SendTestEmail()
    {
        if (string.IsNullOrWhiteSpace(TestRecipient))
        {
            TestResultMessage = "Ingrese un email válido";
            TestResultSuccess = false;
            return;
        }

        IsTesting = true;
        TestResultMessage = null;

        try
        {
            var result = await ConfigService.TestConfigurationAsync(TestRecipient);

            TestResultSuccess = result.Success;
            TestResultMessage = result.Success
                ? "Email de prueba enviado exitosamente. Revise su bandeja de entrada."
                : $"Error al enviar email: {result.Error}";

            if (result.Success)
            {
                // Refresh config to show updated test results
                await LoadConfiguration();
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error sending test email");
            TestResultSuccess = false;
            TestResultMessage = $"Error: {ex.Message}";
        }
        finally
        {
            IsTesting = false;
        }
    }
}
