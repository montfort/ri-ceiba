@page "/reports"
@using Ceiba.Core.Interfaces
@using Ceiba.Shared.DTOs
@using System.Security.Claims
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@inject IReportService ReportService
@inject NavigationManager Navigation
@inject ILogger<ReportList> Logger
@inject AuthenticationStateProvider AuthenticationStateProvider
@attribute [Authorize(Roles = "CREADOR")]

<PageTitle>Mis Reportes</PageTitle>

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2>
                    <i class="bi bi-file-earmark-text me-2"></i>Mis Reportes de Incidencias
                </h2>
                <button type="button" class="btn btn-primary" @onclick="NavigateToNewReport">
                    <i class="bi bi-plus-circle me-2"></i>Nuevo Reporte
                </button>
            </div>
        </div>
    </div>

    <!-- Filter Section -->
    <div class="row mb-3">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-3">
                            <label for="filterEstado" class="form-label">Estado</label>
                            <select id="filterEstado" class="form-select" @bind="FilterEstado" @bind:after="ApplyFilters">
                                <option value="">Todos</option>
                                <option value="0">Borrador</option>
                                <option value="1">Entregado</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="filterDelito" class="form-label">Delito</label>
                            <input id="filterDelito" type="text" class="form-control" placeholder="Buscar por delito" @bind="FilterDelito" @bind:event="oninput" @bind:after="ApplyFiltersDebounced" />
                        </div>
                        <div class="col-md-3">
                            <label for="filterFechaDesde" class="form-label">Desde</label>
                            <input id="filterFechaDesde" type="date" class="form-control" @bind="FilterFechaDesde" @bind:after="ApplyFilters" />
                        </div>
                        <div class="col-md-3">
                            <label for="filterFechaHasta" class="form-label">Hasta</label>
                            <input id="filterFechaHasta" type="date" class="form-control" @bind="FilterFechaHasta" @bind:after="ApplyFilters" />
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-12">
                            <button type="button" class="btn btn-sm btn-secondary" @onclick="ClearFilters">
                                <i class="bi bi-x-circle me-1"></i>Limpiar Filtros
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Results Section -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    @if (IsLoading)
                    {
                        <div class="text-center py-5">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Cargando...</span>
                            </div>
                            <p class="mt-3">Cargando reportes...</p>
                        </div>
                    }
                    else if (!string.IsNullOrEmpty(ErrorMessage))
                    {
                        <div class="alert alert-danger" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            @ErrorMessage
                        </div>
                    }
                    else if (!Reports.Any())
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-inbox" style="font-size: 4rem; color: #ccc;"></i>
                            <p class="mt-3 text-muted">No hay reportes para mostrar.</p>
                            <button type="button" class="btn btn-primary mt-2" @onclick="NavigateToNewReport">
                                <i class="bi bi-plus-circle me-2"></i>Crear Primer Reporte
                            </button>
                        </div>
                    }
                    else
                    {
                        <!-- Desktop Table View -->
                        <div class="table-responsive d-none d-md-block">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Fecha Creación</th>
                                        <th>Fecha Hechos</th>
                                        <th>Estado</th>
                                        <th>Delito</th>
                                        <th>Zona</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var report in Reports)
                                    {
                                        <tr>
                                            <td>@report.Id</td>
                                            <td>@report.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</td>
                                            <td>@report.DatetimeHechos.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</td>
                                            <td>
                                                <span class="badge @GetEstadoBadgeClass(report.Estado)">
                                                    @GetEstadoText(report.Estado)
                                                </span>
                                            </td>
                                            <td>@report.Delito</td>
                                            <td>@report.Zona.Nombre</td>
                                            <td>
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <button type="button" class="btn btn-outline-primary" @onclick="() => ViewReport(report.Id)" title="Ver detalles">
                                                        <i class="bi bi-eye"></i>
                                                    </button>
                                                    @if (report.Estado == 0)
                                                    {
                                                        <button type="button" class="btn btn-outline-secondary" @onclick="() => EditReport(report.Id)" title="Editar">
                                                            <i class="bi bi-pencil"></i>
                                                        </button>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Mobile Card View -->
                        <div class="d-md-none">
                            @foreach (var report in Reports)
                            {
                                <div class="card mb-3">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <h6 class="card-subtitle text-muted">Reporte #@report.Id</h6>
                                            <span class="badge @GetEstadoBadgeClass(report.Estado)">
                                                @GetEstadoText(report.Estado)
                                            </span>
                                        </div>
                                        <p class="card-text mb-1">
                                            <strong>Delito:</strong> @report.Delito
                                        </p>
                                        <p class="card-text mb-1">
                                            <strong>Zona:</strong> @report.Zona.Nombre
                                        </p>
                                        <p class="card-text mb-1">
                                            <strong>Fecha Hechos:</strong> @report.DatetimeHechos.ToLocalTime().ToString("dd/MM/yyyy HH:mm")
                                        </p>
                                        <p class="card-text mb-2">
                                            <small class="text-muted">Creado: @report.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</small>
                                        </p>
                                        <div class="btn-group btn-group-sm w-100" role="group">
                                            <button type="button" class="btn btn-outline-primary" @onclick="() => ViewReport(report.Id)">
                                                <i class="bi bi-eye me-1"></i>Ver
                                            </button>
                                            @if (report.Estado == 0)
                                            {
                                                <button type="button" class="btn btn-outline-secondary" @onclick="() => EditReport(report.Id)">
                                                    <i class="bi bi-pencil me-1"></i>Editar
                                                </button>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>

                        <!-- Pagination -->
                        @if (TotalPages > 1)
                        {
                            <nav aria-label="Paginación de reportes">
                                <ul class="pagination justify-content-center mb-0">
                                    <li class="page-item @(CurrentPage == 1 ? "disabled" : "")">
                                        <button class="page-link" @onclick="() => ChangePage(CurrentPage - 1)" disabled="@(CurrentPage == 1)">
                                            Anterior
                                        </button>
                                    </li>
                                    @for (int i = Math.Max(1, CurrentPage - 2); i <= Math.Min(TotalPages, CurrentPage + 2); i++)
                                    {
                                        var pageNumber = i;
                                        <li class="page-item @(CurrentPage == pageNumber ? "active" : "")">
                                            <button class="page-link" @onclick="() => ChangePage(pageNumber)">
                                                @pageNumber
                                            </button>
                                        </li>
                                    }
                                    <li class="page-item @(CurrentPage == TotalPages ? "disabled" : "")">
                                        <button class="page-link" @onclick="() => ChangePage(CurrentPage + 1)" disabled="@(CurrentPage == TotalPages)">
                                            Siguiente
                                        </button>
                                    </li>
                                </ul>
                            </nav>
                            <p class="text-center text-muted mt-2">
                                Mostrando @Reports.Count de @TotalCount reportes
                            </p>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private List<ReportDto> Reports { get; set; } = new();
    private bool IsLoading { get; set; } = true;
    private string? ErrorMessage { get; set; }
    private Guid CurrentUserId { get; set; }

    // Pagination
    private int CurrentPage { get; set; } = 1;
    private int PageSize { get; set; } = 20;
    private int TotalCount { get; set; } = 0;
    private int TotalPages => (int)Math.Ceiling((double)TotalCount / PageSize);

    // Filters
    private string? FilterEstado { get; set; }
    private string? FilterDelito { get; set; }
    private DateTime? FilterFechaDesde { get; set; }
    private DateTime? FilterFechaHasta { get; set; }
    private System.Threading.Timer? _debounceTimer;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Get current user ID
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            var userIdClaim = authState.User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
            if (string.IsNullOrEmpty(userIdClaim) || !Guid.TryParse(userIdClaim, out var userId))
            {
                ErrorMessage = "No se pudo obtener el ID del usuario autenticado.";
                IsLoading = false;
                return;
            }
            CurrentUserId = userId;

            await LoadReportsAsync();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error initializing report list");
            ErrorMessage = "Error al cargar los reportes. Por favor, intente nuevamente.";
            IsLoading = false;
        }
    }

    private async Task LoadReportsAsync()
    {
        IsLoading = true;
        ErrorMessage = null;

        try
        {
            var filter = new ReportFilterDto
            {
                Estado = string.IsNullOrWhiteSpace(FilterEstado) ? null : int.Parse(FilterEstado),
                Delito = string.IsNullOrWhiteSpace(FilterDelito) ? null : FilterDelito,
                FechaDesde = FilterFechaDesde.HasValue ? DateTime.SpecifyKind(FilterFechaDesde.Value, DateTimeKind.Utc) : null,
                FechaHasta = FilterFechaHasta.HasValue ? DateTime.SpecifyKind(FilterFechaHasta.Value.AddDays(1).AddSeconds(-1), DateTimeKind.Utc) : null,
                Page = CurrentPage,
                PageSize = PageSize,
                SortBy = "createdAt",
                SortDesc = true
            };

            var response = await ReportService.ListReportsAsync(filter, CurrentUserId, false);
            Reports = response.Items;
            TotalCount = response.TotalCount;
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading reports");
            ErrorMessage = "Error al cargar los reportes. Por favor, intente nuevamente.";
        }
        finally
        {
            IsLoading = false;
        }
    }

    private async Task ApplyFilters()
    {
        CurrentPage = 1;
        await LoadReportsAsync();
    }

    private void ApplyFiltersDebounced()
    {
        _debounceTimer?.Dispose();
        _debounceTimer = new System.Threading.Timer(async _ =>
        {
            await InvokeAsync(async () =>
            {
                await ApplyFilters();
                StateHasChanged();
            });
        }, null, 500, Timeout.Infinite);
    }

    private async Task ClearFilters()
    {
        FilterEstado = null;
        FilterDelito = null;
        FilterFechaDesde = null;
        FilterFechaHasta = null;
        CurrentPage = 1;
        await LoadReportsAsync();
    }

    private async Task ChangePage(int page)
    {
        if (page < 1 || page > TotalPages)
            return;

        CurrentPage = page;
        await LoadReportsAsync();
    }

    private void NavigateToNewReport()
    {
        Navigation.NavigateTo("/reports/new");
    }

    private void ViewReport(int reportId)
    {
        Navigation.NavigateTo($"/reports/view/{reportId}");
    }

    private void EditReport(int reportId)
    {
        Navigation.NavigateTo($"/reports/edit/{reportId}");
    }

    private string GetEstadoBadgeClass(int estado)
    {
        return estado switch
        {
            0 => "bg-warning text-dark",
            1 => "bg-success",
            _ => "bg-secondary"
        };
    }

    private string GetEstadoText(int estado)
    {
        return estado switch
        {
            0 => "Borrador",
            1 => "Entregado",
            _ => "Desconocido"
        };
    }

    public void Dispose()
    {
        _debounceTimer?.Dispose();
    }
}
