@page "/supervisor/reports"
@using Ceiba.Application.Services.Export
@using Ceiba.Core.Interfaces
@using Ceiba.Shared.DTOs
@using Ceiba.Shared.DTOs.Export
@using System.Security.Claims
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@inject IReportService ReportService
@inject IExportService ExportService
@inject NavigationManager Navigation
@inject IJSRuntime JS
@inject ILogger<ReportListRevisor> Logger
@inject AuthenticationStateProvider AuthenticationStateProvider
@attribute [Authorize(Roles = "REVISOR")]

<PageTitle>Supervisar Reportes</PageTitle>

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
                <h2>
                    <i class="bi bi-clipboard-check me-2"></i>Supervisar Reportes
                </h2>
                <div class="d-flex gap-2">
                    @if (SelectedReportIds.Any())
                    {
                        <div class="btn-group">
                            <button type="button" class="btn btn-outline-danger" @onclick="() => ExportSelectedAsync(ExportFormat.PDF)" disabled="@IsExporting">
                                <i class="bi bi-file-pdf me-1"></i>Exportar PDF (@SelectedReportIds.Count)
                            </button>
                            <button type="button" class="btn btn-outline-primary" @onclick="() => ExportSelectedAsync(ExportFormat.JSON)" disabled="@IsExporting">
                                <i class="bi bi-file-code me-1"></i>Exportar JSON (@SelectedReportIds.Count)
                            </button>
                        </div>
                        <button type="button" class="btn btn-outline-secondary" @onclick="ClearSelection">
                            <i class="bi bi-x-circle me-1"></i>Limpiar
                        </button>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Export Status -->
    @if (!string.IsNullOrEmpty(ExportMessage))
    {
        <div class="row mb-3">
            <div class="col-12">
                <div class="alert @(ExportSuccess ? "alert-success" : "alert-danger") alert-dismissible fade show" role="alert">
                    <i class="bi @(ExportSuccess ? "bi-check-circle" : "bi-exclamation-triangle") me-2"></i>
                    @ExportMessage
                    <button type="button" class="btn-close" @onclick="() => ExportMessage = null" aria-label="Close"></button>
                </div>
            </div>
        </div>
    }

    <!-- Filter Section -->
    <div class="row mb-3">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-2">
                            <label for="filterEstado" class="form-label">Estado</label>
                            <select id="filterEstado" class="form-select" @bind="FilterEstado" @bind:after="ApplyFilters">
                                <option value="">Todos</option>
                                <option value="0">Borrador</option>
                                <option value="1">Entregado</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="filterDelito" class="form-label">Delito</label>
                            <input id="filterDelito" type="text" class="form-control" placeholder="Buscar por delito" @bind="FilterDelito" @bind:event="oninput" @bind:after="ApplyFiltersDebounced" />
                        </div>
                        <div class="col-md-2">
                            <label for="filterZona" class="form-label">Zona</label>
                            <input id="filterZona" type="text" class="form-control" placeholder="Zona" @bind="FilterZona" @bind:event="oninput" @bind:after="ApplyFiltersDebounced" />
                        </div>
                        <div class="col-md-2">
                            <label for="filterFechaDesde" class="form-label">Desde</label>
                            <input id="filterFechaDesde" type="date" class="form-control" @bind="FilterFechaDesde" @bind:after="ApplyFilters" />
                        </div>
                        <div class="col-md-2">
                            <label for="filterFechaHasta" class="form-label">Hasta</label>
                            <input id="filterFechaHasta" type="date" class="form-control" @bind="FilterFechaHasta" @bind:after="ApplyFilters" />
                        </div>
                        <div class="col-md-1 d-flex align-items-end">
                            <button type="button" class="btn btn-secondary w-100" @onclick="ClearFilters" title="Limpiar filtros">
                                <i class="bi bi-x-circle"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Results Section -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    @if (IsLoading)
                    {
                        <div class="text-center py-5">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Cargando...</span>
                            </div>
                            <p class="mt-3">Cargando reportes...</p>
                        </div>
                    }
                    else if (!string.IsNullOrEmpty(ErrorMessage))
                    {
                        <div class="alert alert-danger" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            @ErrorMessage
                        </div>
                    }
                    else if (!Reports.Any())
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-inbox" style="font-size: 4rem; color: #ccc;"></i>
                            <p class="mt-3 text-muted">No hay reportes que coincidan con los filtros.</p>
                        </div>
                    }
                    else
                    {
                        <!-- Desktop Table View -->
                        <div class="table-responsive d-none d-md-block">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>
                                            <input type="checkbox" class="form-check-input"
                                                   @bind="SelectAll"
                                                   @bind:after="ToggleSelectAll"
                                                   title="Seleccionar todos" />
                                        </th>
                                        <th>ID</th>
                                        <th>Fecha</th>
                                        <th>Estado</th>
                                        <th>Delito</th>
                                        <th>Zona</th>
                                        <th>Usuario</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var report in Reports)
                                    {
                                        <tr class="@(SelectedReportIds.Contains(report.Id) ? "table-active" : "")">
                                            <td>
                                                <input type="checkbox" class="form-check-input"
                                                       checked="@SelectedReportIds.Contains(report.Id)"
                                                       @onchange="() => ToggleReportSelection(report.Id)" />
                                            </td>
                                            <td>@report.Id</td>
                                            <td>@report.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</td>
                                            <td>
                                                <span class="badge @GetEstadoBadgeClass(report.Estado)">
                                                    @GetEstadoText(report.Estado)
                                                </span>
                                            </td>
                                            <td>@report.Delito</td>
                                            <td>@report.Zona.Nombre</td>
                                            <td>
                                                <small class="text-muted">@report.UsuarioId.ToString()[..8]...</small>
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <button type="button" class="btn btn-outline-primary" @onclick="() => ViewReport(report.Id)" title="Ver detalles">
                                                        <i class="bi bi-eye"></i>
                                                    </button>
                                                    <button type="button" class="btn btn-outline-secondary" @onclick="() => EditReport(report.Id)" title="Editar">
                                                        <i class="bi bi-pencil"></i>
                                                    </button>
                                                    <button type="button" class="btn btn-outline-danger" @onclick="() => ExportSingleAsync(report.Id, ExportFormat.PDF)" title="Exportar PDF" disabled="@IsExporting">
                                                        <i class="bi bi-file-pdf"></i>
                                                    </button>
                                                    <button type="button" class="btn btn-outline-info" @onclick="() => ExportSingleAsync(report.Id, ExportFormat.JSON)" title="Exportar JSON" disabled="@IsExporting">
                                                        <i class="bi bi-file-code"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Mobile Card View -->
                        <div class="d-md-none">
                            @foreach (var report in Reports)
                            {
                                <div class="card mb-3 @(SelectedReportIds.Contains(report.Id) ? "border-primary" : "")">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <div class="form-check">
                                                <input type="checkbox" class="form-check-input"
                                                       id="select-@report.Id"
                                                       checked="@SelectedReportIds.Contains(report.Id)"
                                                       @onchange="() => ToggleReportSelection(report.Id)" />
                                                <label class="form-check-label" for="select-@report.Id">
                                                    <strong>Reporte #@report.Id</strong>
                                                </label>
                                            </div>
                                            <span class="badge @GetEstadoBadgeClass(report.Estado)">
                                                @GetEstadoText(report.Estado)
                                            </span>
                                        </div>
                                        <p class="card-text mb-1"><strong>Delito:</strong> @report.Delito</p>
                                        <p class="card-text mb-1"><strong>Zona:</strong> @report.Zona.Nombre</p>
                                        <p class="card-text mb-2">
                                            <small class="text-muted">@report.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</small>
                                        </p>
                                        <div class="d-flex gap-2 flex-wrap">
                                            <button type="button" class="btn btn-sm btn-outline-primary" @onclick="() => ViewReport(report.Id)">
                                                <i class="bi bi-eye me-1"></i>Ver
                                            </button>
                                            <button type="button" class="btn btn-sm btn-outline-secondary" @onclick="() => EditReport(report.Id)">
                                                <i class="bi bi-pencil me-1"></i>Editar
                                            </button>
                                            <button type="button" class="btn btn-sm btn-outline-danger" @onclick="() => ExportSingleAsync(report.Id, ExportFormat.PDF)" disabled="@IsExporting">
                                                <i class="bi bi-file-pdf"></i>
                                            </button>
                                            <button type="button" class="btn btn-sm btn-outline-info" @onclick="() => ExportSingleAsync(report.Id, ExportFormat.JSON)" disabled="@IsExporting">
                                                <i class="bi bi-file-code"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>

                        <!-- Pagination -->
                        @if (TotalPages > 1)
                        {
                            <nav aria-label="Paginacion de reportes">
                                <ul class="pagination justify-content-center mb-0">
                                    <li class="page-item @(CurrentPage == 1 ? "disabled" : "")">
                                        <button class="page-link" @onclick="() => ChangePage(CurrentPage - 1)" disabled="@(CurrentPage == 1)">
                                            Anterior
                                        </button>
                                    </li>
                                    @for (int i = Math.Max(1, CurrentPage - 2); i <= Math.Min(TotalPages, CurrentPage + 2); i++)
                                    {
                                        var pageNumber = i;
                                        <li class="page-item @(CurrentPage == pageNumber ? "active" : "")">
                                            <button class="page-link" @onclick="() => ChangePage(pageNumber)">
                                                @pageNumber
                                            </button>
                                        </li>
                                    }
                                    <li class="page-item @(CurrentPage == TotalPages ? "disabled" : "")">
                                        <button class="page-link" @onclick="() => ChangePage(CurrentPage + 1)" disabled="@(CurrentPage == TotalPages)">
                                            Siguiente
                                        </button>
                                    </li>
                                </ul>
                            </nav>
                            <p class="text-center text-muted mt-2">
                                Mostrando @Reports.Count de @TotalCount reportes
                            </p>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private List<ReportDto> Reports { get; set; } = new();
    private HashSet<int> SelectedReportIds { get; set; } = new();
    private bool SelectAll { get; set; }
    private bool IsLoading { get; set; } = true;
    private bool IsExporting { get; set; }
    private string? ErrorMessage { get; set; }
    private string? ExportMessage { get; set; }
    private bool ExportSuccess { get; set; }
    private Guid CurrentUserId { get; set; }

    // Pagination
    private int CurrentPage { get; set; } = 1;
    private int PageSize { get; set; } = 20;
    private int TotalCount { get; set; } = 0;
    private int TotalPages => (int)Math.Ceiling((double)TotalCount / PageSize);

    // Filters
    private string? FilterEstado { get; set; }
    private string? FilterDelito { get; set; }
    private string? FilterZona { get; set; }
    private DateTime? FilterFechaDesde { get; set; }
    private DateTime? FilterFechaHasta { get; set; }
    private System.Threading.Timer? _debounceTimer;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            var userIdClaim = authState.User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
            if (string.IsNullOrEmpty(userIdClaim) || !Guid.TryParse(userIdClaim, out var userId))
            {
                ErrorMessage = "No se pudo obtener el ID del usuario autenticado.";
                IsLoading = false;
                return;
            }
            CurrentUserId = userId;

            await LoadReportsAsync();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error initializing revisor report list");
            ErrorMessage = "Error al cargar los reportes. Por favor, intente nuevamente.";
            IsLoading = false;
        }
    }

    private async Task LoadReportsAsync()
    {
        IsLoading = true;
        ErrorMessage = null;

        try
        {
            var filter = new ReportFilterDto
            {
                Estado = string.IsNullOrWhiteSpace(FilterEstado) ? null : int.Parse(FilterEstado),
                Delito = string.IsNullOrWhiteSpace(FilterDelito) ? null : FilterDelito,
                FechaDesde = FilterFechaDesde,
                FechaHasta = FilterFechaHasta,
                Page = CurrentPage,
                PageSize = PageSize,
                SortBy = "createdAt",
                SortDesc = true
            };

            // REVISOR can see all reports (isRevisor: true)
            var response = await ReportService.ListReportsAsync(filter, CurrentUserId, isRevisor: true);
            Reports = response.Items;
            TotalCount = response.TotalCount;

            // Update SelectAll based on current selection
            SelectAll = Reports.Any() && Reports.All(r => SelectedReportIds.Contains(r.Id));
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading reports for revisor");
            ErrorMessage = "Error al cargar los reportes. Por favor, intente nuevamente.";
        }
        finally
        {
            IsLoading = false;
        }
    }

    private void ToggleReportSelection(int reportId)
    {
        if (SelectedReportIds.Contains(reportId))
        {
            SelectedReportIds.Remove(reportId);
        }
        else
        {
            SelectedReportIds.Add(reportId);
        }
        SelectAll = Reports.Any() && Reports.All(r => SelectedReportIds.Contains(r.Id));
    }

    private void ToggleSelectAll()
    {
        if (SelectAll)
        {
            foreach (var report in Reports)
            {
                SelectedReportIds.Add(report.Id);
            }
        }
        else
        {
            foreach (var report in Reports)
            {
                SelectedReportIds.Remove(report.Id);
            }
        }
    }

    private void ClearSelection()
    {
        SelectedReportIds.Clear();
        SelectAll = false;
    }

    private async Task ExportSingleAsync(int reportId, ExportFormat format)
    {
        IsExporting = true;
        ExportMessage = null;

        try
        {
            var result = await ExportService.ExportSingleReportAsync(reportId, format, CurrentUserId, isRevisor: true);
            await DownloadFileAsync(result.Data, result.FileName, result.ContentType);

            ExportSuccess = true;
            ExportMessage = $"Reporte exportado exitosamente: {result.FileName}";
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error exporting report {ReportId}", reportId);
            ExportSuccess = false;
            ExportMessage = $"Error al exportar el reporte: {ex.Message}";
        }
        finally
        {
            IsExporting = false;
        }
    }

    private async Task ExportSelectedAsync(ExportFormat format)
    {
        if (!SelectedReportIds.Any())
        {
            ExportSuccess = false;
            ExportMessage = "Seleccione al menos un reporte para exportar.";
            return;
        }

        IsExporting = true;
        ExportMessage = null;

        try
        {
            var request = new ExportRequestDto
            {
                ReportIds = SelectedReportIds.ToArray(),
                Format = format
            };

            var result = await ExportService.ExportReportsAsync(request, CurrentUserId, isRevisor: true);
            await DownloadFileAsync(result.Data, result.FileName, result.ContentType);

            ExportSuccess = true;
            ExportMessage = $"{result.ReportCount} reportes exportados exitosamente: {result.FileName}";
            ClearSelection();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error exporting {Count} reports", SelectedReportIds.Count);
            ExportSuccess = false;
            ExportMessage = $"Error al exportar los reportes: {ex.Message}";
        }
        finally
        {
            IsExporting = false;
        }
    }

    private async Task DownloadFileAsync(byte[] data, string fileName, string contentType)
    {
        // Use JS interop to trigger file download
        var base64 = Convert.ToBase64String(data);
        await JS.InvokeVoidAsync("downloadFileFromBase64", base64, fileName, contentType);
    }

    private async Task ApplyFilters()
    {
        CurrentPage = 1;
        await LoadReportsAsync();
    }

    private void ApplyFiltersDebounced()
    {
        _debounceTimer?.Dispose();
        _debounceTimer = new System.Threading.Timer(async _ =>
        {
            await InvokeAsync(async () =>
            {
                await ApplyFilters();
                StateHasChanged();
            });
        }, null, 500, Timeout.Infinite);
    }

    private async Task ClearFilters()
    {
        FilterEstado = null;
        FilterDelito = null;
        FilterZona = null;
        FilterFechaDesde = null;
        FilterFechaHasta = null;
        CurrentPage = 1;
        await LoadReportsAsync();
    }

    private async Task ChangePage(int page)
    {
        if (page < 1 || page > TotalPages) return;
        CurrentPage = page;
        await LoadReportsAsync();
    }

    private void ViewReport(int reportId)
    {
        Navigation.NavigateTo($"/reports/view/{reportId}");
    }

    private void EditReport(int reportId)
    {
        Navigation.NavigateTo($"/reports/edit/{reportId}");
    }

    private static string GetEstadoBadgeClass(int estado) => estado switch
    {
        0 => "bg-warning text-dark",
        1 => "bg-success",
        _ => "bg-secondary"
    };

    private static string GetEstadoText(int estado) => estado switch
    {
        0 => "Borrador",
        1 => "Entregado",
        _ => "Desconocido"
    };

    public void Dispose()
    {
        _debounceTimer?.Dispose();
    }
}
