@page "/setup/complete"
@layout SetupLayout
@inject ISetupService SetupService
@inject NavigationManager Navigation

<div class="setup-card text-center">
    <div class="mb-4">
        <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
    </div>

    <h2 class="text-success mb-3">
        Configuración Completada
    </h2>

    <p class="text-muted mb-4">
        El sistema ha sido configurado correctamente. Ya puede iniciar sesión con
        las credenciales del administrador que acaba de crear.
    </p>

    @if (_status != null)
    {
        <div class="setup-summary mb-4">
            <h5 class="text-start">Resumen de Configuración</h5>
            <ul class="list-group text-start">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span><i class="bi bi-people"></i> Roles del sistema</span>
                    <span class="badge bg-success"><i class="bi bi-check"></i> Configurado</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span><i class="bi bi-person-badge"></i> Usuario administrador</span>
                    <span class="badge bg-success"><i class="bi bi-check"></i> Creado</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span><i class="bi bi-geo-alt"></i> Catálogos geográficos</span>
                    @if (_status.HasGeographicCatalogs)
                    {
                        <span class="badge bg-success"><i class="bi bi-check"></i> Cargados</span>
                    }
                    else
                    {
                        <span class="badge bg-warning text-dark"><i class="bi bi-clock"></i> Pendiente</span>
                    }
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span><i class="bi bi-lightbulb"></i> Sugerencias</span>
                    @if (_status.HasSuggestions)
                    {
                        <span class="badge bg-success"><i class="bi bi-check"></i> Configuradas</span>
                    }
                    else
                    {
                        <span class="badge bg-warning text-dark"><i class="bi bi-clock"></i> Pendiente</span>
                    }
                </li>
            </ul>
        </div>
    }

    <div class="d-grid gap-2">
        <a href="/auth/login" class="btn btn-primary btn-lg">
            <i class="bi bi-box-arrow-in-right"></i> Iniciar Sesión
        </a>
        <a href="/" class="btn btn-outline-secondary">
            <i class="bi bi-house-door"></i> Ir al Inicio
        </a>
    </div>

    <div class="mt-4 p-3 bg-light rounded">
        <h6 class="text-muted">Siguiente Paso</h6>
        <p class="small text-muted mb-0">
            Inicie sesión como administrador para acceder al panel de
            administración. Desde allí podrá crear usuarios adicionales,
            configurar catálogos y gestionar el sistema.
        </p>
    </div>
</div>

@code {
    private SetupStatus? _status;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            _status = await SetupService.GetStatusAsync();

            // If setup is not complete, redirect back to setup
            if (_status != null && !_status.IsComplete && !_status.HasUsers)
            {
                Navigation.NavigateTo("/setup");
            }
        }
        catch
        {
            // Ignore errors, show the page anyway
        }
    }
}
