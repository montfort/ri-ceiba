{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=ceiba;Username=ceiba;Password=ceiba123;Include Error Detail=true"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": ["FromLogContext"],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/ceiba-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {SourceContext} {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "AllowedOrigins": [],
  "AllowedHosts": "*",
  "FeatureFlags": {
    "EnableReporteTipoB": false,
    "EnableReporteTipoC": false,
    "EnableAutomatedReports": true,
    "EnableAINarrative": true,
    "EnableEmailNotifications": true,
    "EnablePDFExport": true,
    "EnableJSONExport": true,
    "EnableBulkOperations": true,
    "EnableAdvancedSearch": true,
    "EnableSelfRegistration": false,
    "MaintenanceMode": false
  }
}
