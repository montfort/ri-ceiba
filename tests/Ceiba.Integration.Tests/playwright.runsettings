<?xml version="1.0" encoding="utf-8"?>
<RunSettings>
  <!-- xUnit Configuration -->
  <xUnit>
    <MaxParallelThreads>1</MaxParallelThreads>
  </xUnit>

  <!-- General Run Configuration -->
  <RunConfiguration>
    <EnvironmentVariables>
      <!-- Enable Playwright API debugging if needed -->
      <!-- <DEBUG>pw:api</DEBUG> -->
    </EnvironmentVariables>
  </RunConfiguration>

  <!-- Playwright Configuration -->
  <Playwright>
    <BrowserName>chromium</BrowserName>
    <ExpectTimeout>10000</ExpectTimeout>
    <LaunchOptions>
      <Headless>true</Headless>
      <SlowMo>0</SlowMo>
    </LaunchOptions>
    <ContextOptions>
      <Locale>es-MX</Locale>
      <TimezoneId>America/Mexico_City</TimezoneId>
      <ViewportSize>
        <Width>1280</Width>
        <Height>720</Height>
      </ViewportSize>
    </ContextOptions>
  </Playwright>
</RunSettings>
